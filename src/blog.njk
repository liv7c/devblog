layout: base.njk
---

<div class="page-content-wrapper">
  <h1>Blog</h1>

  <ul class="post-list">
    {%- for post in collections.posts | reverse -%}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <div>
        <span class="tag">{{ post.data.topics }}</span>
        <time datetime="{{ post.data.date | isoDate }}" class="post-list__date">{{
          post.data.date | asPostDate
        }}</time>
      </div>
    </li>
    {%- endfor -%}
  </ul>
</div>